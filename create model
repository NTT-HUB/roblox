local USER_ID = 2740267445 -- ğŸ‘ˆ Thay ID táº¡i Ä‘Ã¢y

-- Táº¡o NPC tá»« user ID
local npc = game.Players:CreateHumanoidModelFromUserId(USER_ID)
npc.Name = "MyNPC"
npc.Parent = workspace

-- Äáº£m báº£o nhÃ¢n váº­t cÃ³ HumanoidRootPart vÃ  Ä‘áº·t lÃ m PrimaryPart
local hrp = npc:FindFirstChild("HumanoidRootPart")
if hrp then
	npc.PrimaryPart = hrp
end

-- Äáº£m báº£o cÃ³ Baseplate
if not workspace:FindFirstChild("Baseplate") then
	local base = Instance.new("Part")
	base.Name = "Baseplate"
	base.Anchored = true
	base.Size = Vector3.new(200, 1, 200)
	base.Position = Vector3.new(0, 0, 0)
	base.CanCollide = true
	base.Parent = workspace
end

-- Äáº·t vá»‹ trÃ­ NPC Ä‘á»©ng trÃªn baseplate
if npc.PrimaryPart then
	npc:SetPrimaryPartCFrame(CFrame.new(0, 5, 0)) -- Cao 5 Ä‘á»ƒ rÆ¡i xuá»‘ng Ä‘áº¥t
end

-- Táº¯t kháº£ nÄƒng nháº£y
local humanoid = npc:FindFirstChildWhichIsA("Humanoid")
if humanoid then
	humanoid.JumpPower = 0
	humanoid.JumpHeight = 0
	humanoid:SetStateEnabled(Enum.HumanoidStateType.Jumping, false)
	humanoid:SetStateEnabled(Enum.HumanoidStateType.Freefall, false)
end

-- Tá»± Ä‘á»™ng di chuyá»ƒn má»—i 3 giÃ¢y
task.spawn(function()
	while true do
		if npc.PrimaryPart and humanoid then
			local currentPos = npc.PrimaryPart.Position
			local targetPos = currentPos + Vector3.new(math.random(-10, 10), 0, math.random(-10, 10))

			humanoid:MoveTo(targetPos)
			humanoid.MoveToFinished:Wait()

			task.wait(3)
		end
	end
end)
