local USER_ID = 2740267445 -- ğŸ‘ˆ Thay ID táº¡i Ä‘Ã¢y
local HttpService = game:GetService("HttpService")

-- ğŸ§  HÃ m táº£i Script tá»« GitHub RAW
local function loadRemoteScript(name, url, parent)
	local success, result = pcall(function()
		return HttpService:GetAsync(url)
	end)

	if success then
		local s = Instance.new("Script")
		s.Name = name
		s.Source = result
		s.Parent = parent
	else
		warn("Táº£i script tháº¥t báº¡i: " .. name .. " - " .. result)
	end
end

-- ğŸ­ Táº¡o NPC tá»« UserId
local npc = game.Players:CreateHumanoidModelFromUserId(USER_ID)
npc.Name = "MyNPC"
npc.Parent = workspace:FindFirstChild("NPC") or workspace

-- Äáº£m báº£o cÃ³ HumanoidRootPart
local hrp = npc:FindFirstChild("HumanoidRootPart")
if hrp then
	npc.PrimaryPart = hrp
end

-- âš™ï¸ Baseplate náº¿u chÆ°a cÃ³
if not workspace:FindFirstChild("Baseplate") then
	local base = Instance.new("Part")
	base.Name = "Baseplate"
	base.Anchored = true
	base.Size = Vector3.new(200, 1, 200)
	base.Position = Vector3.new(0, 0, 0)
	base.CanCollide = true
	base.Parent = workspace
end

-- ğŸ“· Äáº·t vá»‹ trÃ­ gáº§n camera
local cam = workspace.CurrentCamera
if cam and npc.PrimaryPart then
	local camCFrame = cam.CFrame
	local spawnPos = camCFrame.Position + camCFrame.LookVector * 5
	npc:SetPrimaryPartCFrame(CFrame.new(spawnPos))
end

-- ğŸŒ Gáº¯n Move.lua vÃ  Animation.lua tá»« GitHub
local moveURL = "https://raw.githubusercontent.com/NTT-HUB/roblox/refs/heads/main/mover15"
local animURL = "https://raw.githubusercontent.com/NTT-HUB/roblox/refs/heads/main/animationR15"

loadRemoteScript("Move", moveURL, npc)
loadRemoteScript("Animation", animURL, npc)
