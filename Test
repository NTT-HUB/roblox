local USER_ID = 2740267445 -- üëà Thay ID t·∫°i ƒë√¢y

-- T·∫°o NPC t·ª´ user ID
local npc = game.Players:CreateHumanoidModelFromUserId(USER_ID)
npc.Name = "MyNPC"
npc.Parent = workspace:FindFirstChild("NPC") or workspace

-- ƒê·∫£m b·∫£o nh√¢n v·∫≠t c√≥ HumanoidRootPart v√† ƒë·∫∑t l√†m PrimaryPart
local hrp = npc:FindFirstChild("HumanoidRootPart")
if hrp then
	npc.PrimaryPart = hrp
end

-- ƒê·∫£m b·∫£o c√≥ Baseplate
if not workspace:FindFirstChild("Baseplate") then
	local base = Instance.new("Part")
	base.Name = "Baseplate"
	base.Anchored = true
	base.Size = Vector3.new(200, 1, 200)
	base.Position = Vector3.new(0, 0, 0)
	base.CanCollide = true
	base.Parent = workspace
end

-- Spawn g·∫ßn Camera
local cam = workspace.CurrentCamera
if cam and npc.PrimaryPart then
	local camCFrame = cam.CFrame
	local spawnPos = camCFrame.Position + camCFrame.LookVector * 5 -- C√°ch 5 ƒë∆°n v·ªã ph√≠a tr∆∞·ªõc camera
	npc:SetPrimaryPartCFrame(CFrame.new(spawnPos))
end

-- üß† T·∫°o 2 script con: Move v√† Animation
local moveScript = Instance.new("Script")
moveScript.Name = "Move"
moveScript.Source = [[
print("Move script ch·∫°y")
-- B·∫°n c√≥ th·ªÉ th√™m logic di chuy·ªÉn t·∫°i ƒë√¢y
]]
moveScript.Parent = npc

local animScript = Instance.new("Script")
animScript.Name = "Animation"
animScript.Source = [[
print("Animation script ch·∫°y")
-- B·∫°n c√≥ th·ªÉ th√™m logic animation t·∫°i ƒë√¢y
]]
animScript.Parent = npc
